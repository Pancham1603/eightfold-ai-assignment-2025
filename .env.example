# Google AI Studio Configuration (REQUIRED)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Pinecone Configuration (REQUIRED)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_REGION=us-east-1
PINECONE_INDEX_NAME=company-research
PINECONE_DIMENSION=384

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=company_profiles

# Application Settings
MAX_SEARCH_RESULTS=10
SCRAPING_TIMEOUT=30

# External API Keys (for company data sources)
# Add any additional API keys needed for company research tools

